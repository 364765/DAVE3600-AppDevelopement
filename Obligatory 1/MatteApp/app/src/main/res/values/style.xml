<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Vertical styles -->
    <style name="activityMainButtonVerticalStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="activitySpillTallKnapperVerticalStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="activityPreferanserButtonVerticalStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="activityInfoTittelVerticalStyle">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="activityInfoTekstVerticalStyle">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!--Horizontal styles -->
    <style name="toolbarHorizontalStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="activityMainButtonHorizontalStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="activitySpillTallKnapperHorizontalStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="activityPreferanserButtonHorizontalStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">280dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/rounded_button</item>
