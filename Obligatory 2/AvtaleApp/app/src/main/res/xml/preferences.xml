<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Generelle instillinger">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="smsTjeneste"
            android:summary="Sender møte påminnelses SMS"
            android:title="Tillatt SMS tjeneste" />
        <EditTextPreference
            android:defaultValue="06:00"
            android:inputType="time"
            android:key="smsTidspunkt"
            android:summary="Tidspunkt SMS sendes"
            android:title="Tidspunkt" />
        <EditTextPreference
            android:defaultValue="Hei! Minner på at vi har et møte i dag."
            android:inputType="text"
            android:key="smsMelding"
            android:summary="Velg innholdet i SMS"
            android:title="SMS innhold" />
    </PreferenceCategory>
</PreferenceScreen>
